<div class="b-notification__text">
  <% if notification.origin_user.nil? %>
    You followed project &nbsp 
    <%= link_to notification.source_model.title, project_path(notification.source_model) %>
    &nbsp at &nbsp <%= notification.created_at %>
  <% else %>
    <%= notification.origin_user.name %> &nbsp
    followed project &nbsp
    <%= link_to notification.source_model.title, project_path(notification.source_model) %>
    &nbsp at &nbsp <%= notification.created_at %>
  <% end %>
</div>
