<div class="b-notification__text">
  <% if current_user.is_admin_for? notification.source_model %>
    You have updated project
    <%= link_to notification.source_model.title, project_path(notification.source_model) %>
  <% else %>
    <%= notification.source_model.user.name %> &nbsp
    have updated project
    <%= link_to notification.source_model.title, project_path(notification.source_model) %>
  <% end %>
</div>
