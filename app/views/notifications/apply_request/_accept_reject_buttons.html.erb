<div class="b-notification__actions">
  <% if source_model.is_valid? %>
    <%= link_to(accept_apply_request_path(source_model), class: 'btn-notify _accept', method: :post) do %>
      <svg focusable="false" version="1.1" class="svg-check">
        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#svg-check"></use>
      </svg>
      Approve
    <% end %>
    <%= link_to(reject_apply_request_path(source_model), class: 'btn-notify _reject', method: :post, notification: { id: notification.id }) do %>
      <svg focusable="false" version="1.1" class="svg-times">
        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#svg-times"></use>
      </svg>
      Deny
    <% end %>
  <% else %>
      You have
      <% if source_model.accepted_at.nil? %>
        "Rejected"
      <% else %>
        "Accepted"
      <% end %>
      the apply request
  <% end %>
</div>
