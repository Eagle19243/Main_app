<div class="b-notification__actions">
  <% if source_model.state == "pending" %>
      <%= link_to accept_do_request_path(source_model.id), :method => :put, class: 'btn-notify _accept' do %>
        <svg focusable="false" version="1.1" class="svg-check">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#svg-check"></use>
        </svg>
        Approve
      <% end %>
      <%= link_to reject_do_request_path(source_model.id), :method => :put, class: 'btn-notify _reject', title: "Delete" 'notification-id': notification.id do %>
        <svg focusable="false" version="1.1" class="svg-times">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#svg-times"></use>
        </svg>
        Deny
      <% end %>
  <% else %>
      You have <%= source_model.state %> the do request
  <% end %>
</div>
