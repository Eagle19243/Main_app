                     </svg>
                 </div>
                 <div class="s-landing__features-title"><%= t('landing.independent.transparency.title') %></div>
                 <div class="s-landing__features-info">
                     <%= t('landing.independent.transparency.description') %>
                 </div>
             </li>
             <li class="s-landing__features-item">
                 <div class="s-landing__features-logo">
                     <svg focusable="false" version="1.1" class="svg-bitcoin-logo" aria-hidden="true">
                         <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#svg-bitcoin-logo"></use>
                     </svg>
                 </div>
                 <div class="s-landing__features-title"><%= t('landing.independent.bitcoin_payment.title') %></div>
                 <div class="s-landing__features-info">
                     <%= t('landing.independent.bitcoin_payment.description') %>
                 </div>
             </li>
        </ul>
    </div>
  </div>

 <div class="s-landing__start _navigation-item" id="s-landing-start">
    <div class="s-landing__wrapper">
        <div class="s-landing__start-button">
          <% if user_signed_in? %>
              <a class="btn-root _light" data-modal="#startProjectModal"><%= t('commons.start_a_project') %></a>
          <% else %>
              <button class="btn-root _light sign_up_a" data-modal="#registerModal"><%= t('commons.start_a_project') %></a>
          <% end %>
        </div>
      </div>
