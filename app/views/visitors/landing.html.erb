
<div class="landing-content">
  <div class="hero-banner">
    <div class="row margin-none">
      <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="hero-promo">
          <div class="promo-wrapper">
            <h1>Turn your audience into a task force</h1>
            <p>Share your vision and your audience will make it happen</p>

            <div class="hero-start">
              <% if user_signed_in? %>
                  <a class="btn-start" data-toggle="modal" data-target="#startProjectModal">Start a Project</a>
              <% else %>
                  <a class="btn-start" data-modal="#projectSignupModal">Start a Project</a>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-6 col-md-6 col-sm-6">
        <%= image_tag("landing_hero.jpg") %>
      </div>
    </div>
  </div>

  <section class="s-how-work">
    <div class="s-how-work__container">
      <h2 class="s-how-work__title">Keep control on collaboration at any step</h2>
      <div class="s-how-work__item-wrap">
        <div class="s-how-work__item">
          <div class="s-how-work__item-content">
            <div class="s-how-work__img-wrap">
              <%= image_tag("icons/icon_people.png", :class => "s-how-work__img") %>
            </div>
            <p class="s-how-work__text">expand your idea into a plan of action</p>
          </div>
        </div>
        <div class="s-how-work__item">
          <%= image_tag("icons/icon_arrow.png", :class => "s-how-work__arrow") %>
          <div class="s-how-work__item-content">
            <div class="s-how-work__img-wrap">
              <%= image_tag("icons/icon_page.png", :class => "s-how-work__img") %>
            </div>
            <p class="s-how-work__text">break your project down into tasks</p>
          </div>
        </div>
        <div class="s-how-work__item">
          <%= image_tag("icons/icon_arrow.png", :class => "s-how-work__arrow") %>
          <div class="s-how-work__item-content">
            <div class="s-how-work__img-wrap">
              <%= image_tag("icons/icon_bmoney.png", :class => "s-how-work__img") %>
            </div>
            <p class="s-how-work__text">fund tasks</p>
          </div>
        </div>
        <div class="s-how-work__item">
          <%= image_tag("icons/icon_arrow.png", :class => "s-how-work__arrow") %>
          <div class="s-how-work__item-content">
            <div class="s-how-work__img-wrap">
              <%= image_tag("icons/icon_checklist.png", :class => "s-how-work__img") %>
            </div>
            <p class="s-how-work__text">complete tasks</p>
          </div>
        </div>
        <div class="s-how-work__item">
          <%= image_tag("icons/icon_arrow.png", :class => "s-how-work__arrow") %>
          <div class="s-how-work__item-content">
            <div class="s-how-work__img-wrap">
              <%= image_tag("icons/icon_chacklist_look.png", :class => "s-how-work__img") %>
            </div>
            <p class="s-how-work__text">review tasks</p>
          </div>
        </div>
      </div>
    </div>
  </section>

