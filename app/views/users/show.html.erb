<link href='http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css' rel='stylesheet' type='text/css'>
<link href="/static/users/css/font-awesome.css"rel="stylesheet">
<link href="/static/users/css/style.css"rel="stylesheet">
<link rel="stylesheet" href="/static/ManishNotifications/css/style.css">
<link rel="stylesheet" type="text/css" href="/static/ManishNotifications/css/font-awesome/css/font-awesome.min.css">
<link rel="stylesheet" href="static/users/css/menu.css" />
<link href='https://fonts.googleapis.com/css?family=Roboto+Condensed:400,300,700' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>

<%= render 'layouts/menu', user: @user %>

<% content_for :title do %>
  WeServe > User Profile
<% end %>

<div class="row expanded collapse" data-equalizer data-equalizer-mq="large-up">
  <%= render 'sidebar' %>
  <div class="small-12 medium-10 columns" data-equalizer-watch>
    <div class="tabs-content">
      <div class="content active" id="dashboard">
        <div class="lin2 row">
          <div class="lin2-media small-12 medium-2 columns">
            <% if @user.picture? %>
              <%= image_tag(@user.picture.url, size: "123x123") %>
            <% else %>
              <%= gravatar_for(@user, 123)%>
            <%end%>
          </div>
          <div class="lin2-contents medium-10 columns">
            <h1><%= @user.name %></h1>
            <div class="lin2-social ">
              <a href='<%= url_for("http://#{@user.facebook_url}") %>' target="_blank"><i class="icon-facebook"></i></a>
              <a href="<%= url_for("http://#{@user.linkedin_url}") %>" target="_blank"><i class="icon-linkedin"></i></a>
              <a href="<%= url_for("http://#{@user.twitter_url}") %>" target="_blank"><i class="icon-link"></i></a>
              <a href="<%= url_for("mailto:#{@user.email}") %>" target="_blank"><i class="icon-envelope-alt"></i></a>
            </div>
            <p>
              <i class="icon-map-marker margin-right-5"></i>
              <%= user_short_info(@user) %>
            </p>
            <a href="#" class="button button-send"><i class="icon-comment"></i>Send Message</a>
          </div>
        </div>
        <div class="lin3">
          <div class="lin-inner">
            <span class="no"><%= @user.projects.count %></span>
            <span class="tx">Project </br>Leads</span>
          </div>
          <div class="lin-inner">
            <span class="no"><%= @user.completed_tasks_count %></span>
            <span class="tx">Completed </br>Tasks</span>
          </div>
          <div class="lin-inner">
            <span class="no"><%= @user.funded_projects_count %></span>
            <span class="tx">Funded </br>Projects</span>
          </div>
        </div>
        <section class="bio">
          <h1><i class="icon-user"></i>Bio</h1>
          <!-- begin user bio -->
            <h2>
              <strong>Institution:
                <% @user.institutions.to_a.each do |institution| %>
                  <span><%= link_to "#{institution.try(:name)}  ", institution_path(institution) %></span>
                  &nbsp
                <% end %>
              </strong>
            </h2>
            <p><%= @user.institution.try(:description) %></p>
            <h4>
              <% if @user.bio.nil? %>
                A gypsy would come rolling over the hill. He whistled and he sang as he went on along, and he won the heart of a lady.
                <br />
                He's no gypsy my father she said, but lord of all these lands. And with my gypsy rover I'll stay, til the sun come up over these hills.
              <% else %>
                <%= "#{@user.bio}" %>
              <% end %>
            </h4>
            <br>
          <!-- end user bio  -->
        </section>
        <section class="comments">
          <div class="row">
            <%= render 'comments' %>
            <%= render 'projects' %>
          </div>
        </section>
      </div>
      <div class="content" id="profile">
        Profile
      </div>

      <div class="content" id="projects">
       <h3>Projects</h3>
       <div class="row">
         <%= render 'comments' %>
         <%= render 'projects' %>
       </div>
      </div>

      <div class="content" id="notifications">
        <%= render 'notifications' %>
      </div>

      <div class="content" id="messages">
        Messages
      </div>

      <div class="content" id="logout">
        Logout
      </div>
    </div>
  </div>
</div>

