<%= simple_form_for(ProfileComment.new) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :commenter_id, as: :hidden, input_html: { value: current_user.id } %>
    <%= f.input :receiver_id, as: :hidden, input_html: { value: params[:id] } %>
    <%= f.input :comment_text, placeholder: "Type a comment" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send Comment" %>
  </div>
<% end %>
