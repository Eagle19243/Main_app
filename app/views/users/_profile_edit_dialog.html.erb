<div class="modal-default modal-edit-img _avatar" id="profile-img-edit" role="dialog" tabindex="-1" aria-hidden="true">
  <div class="modal-default__content" role="document">
      <button class="modal-default__close" type="button"></button>
      <h3 class="modal-default__title"><%= t('.edit_profile_img') %></h3>
      <%= form_for(@user, :html => {:class => 'f-edit-img'}) do |f| %>
        <% if @user.picture? %>
          <div class="f-edit-img__image">
            <%= f.cropbox :picture %>
          </div>
        <% else %>
          <div class="f-edit-img__placeholder">
            <%= image_tag(@user.picture) %>
          </div>
        <% end %>
        <%= f.file_field :picture, class: 'btn-upload', onchange: "previewProfileImage(this);"%>
        <button class="btn-root" name="commit" data-modal-close><%= t('commons.save_changes') %></button>
        <button type="button" class="btn-root _dark" data-modal-close><%= t('commons.cancel') %></button>
      <% end %>
  </div>
</div>
