  
  <div class="main">
    <div class="row messages-page-row">
      <!-- Messages and projects nav -->
      <div class="small-2 columns full-page" id="messages-nav">
        <br>
        <div class="messages-nav-title">
          <i class="fa fa-file-text-o fa-2x" aria-hidden="true"></i>
          <span>Messages</span>
        </div>
        <div class="messages-menu">
          <div class="messages-submenu">
            <div class="submenu-title">          
              <span class="menu-subtitle">
                PROJECTS (<%= @user.projects.count %>)
              </span>
              <%= link_to new_project_path do%>
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
              <% end %>
            </div>
            <ul class="circle">
              <% @user.projects.each do |project| %>
                <li>
                  <%= link_to project.title, project_path(project) %>
                </li>
              <% end %>
            </ul>
          </div>
          <hr>
          <div class="messages-submenu">
            <div class="submenu-title">  
              <span class="menu-subtitle">DIRECT MESSAGES</span>
              <%= link_to conversations_path do %>
                <i class="fa fa-plus-circle" aria-hidden="true"></i> 
              <% end %>              
            </div>
            <ul class="circle">
              <% @conversations.each do |conversation| %>
                <li><a href="#"><%= conversation_companion_name(@user, conversation) %></a></li>
              <% end %>
              <li class="active"><a href="#">Caju</a></li>
            </ul>
          </div>
          <hr>
        </div>
      </div>

      <div class="small-7 columns" id="page-message-content">
        <br>
        <div>
          <!-- Conversation name -->
          <div class="small-6 columns">
            <h4 id="conversation-name">
              <%= @conversations.first.sender.name %>
            </h4>
          </div>
        
          <div class="small-6 columns">
            <!-- Search box -->
            <div class="small-8 columns">
              <form>
                <div class="row messages-page-row collapse">
                  <div class="small-9 columns">
                    <input type="search" placeholder="search">
                  </div>
                  <div class="small-3 columns">
                    <span class="postfix"><i class="fa fa-search" aria-hidden="true"></i></span>
                  </div>
                </div>
              </form>
            </div>
            <!-- Settings and attach file icons -->
            <div class="small-4 columns">
              <span style="margin-right: 8px;">
                <i class="fa fa-cog fa-2x" title="Settings" aria-hidden="true"></i>
              </span>
              <span>
                <i class="fa fa-paperclip fa-2x" title="Attach file" aria-hidden="true"></i>  
              </span>
            </div>
          </div>
        </div>

        <hr>
        <!-- Messages box. includes messages and new message form -->
        <div id="conversation_messages">
          <% @conversations.first.messages.each do |message| %>
            <div class="row conversation_message">
              <div class="small-1 columns">
                <a href="#"><%= gravatar_for(message.user) %></a>
              </div>
              <div class="small-11 columns message-content">
                <span>
                  <%= message.body %>
                </span>
                <div class="message-date"><%= message.message_time %></div>
              </div>  
            </div>
          <% end %>
          <!-- Represents single message -->
        </div>  
        <hr>
        
        <form class="new-message-form">
          <div class="small-11 columns">
            <textarea placeholder="Type message"></textarea>
          </div>
          <div class="small-1 columns">
            <span class="postfix">
              <i class="fa fa-paperclip fa-2x" title="Attach file" aria-hidden="true"></i>
            </span>
          </div>
          <span class="send-hint">
            Hit "Enter" to send
          </span>
        </form>

      </div>
    </div>
  </div>