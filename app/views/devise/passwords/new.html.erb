<div class="forgot-pwd-wrapper">
  <div class="forgot-pwd-form">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
      <h3><%= t('.forgot_your_password') %></h3>
      <p class="text-center"><%= t('.we_will_send_password_reset_instructions') %></p>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
      </div>
      <div class="text-right">
       <%= f.submit t('.send_me_reset_password_instructions'), :class => 'btn-default-weserve' %>
      </div>
    <% end %>
  </div>
</div>
