<div class="row row-custom" id="sign_in_show">
  <div class="row row-custom">
    <div class="register-form">
      <div class="abc">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'register-form') do |f| %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true  %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %>
                <%= User.human_attribute_name('remember_me') %>
              </label>
            </div>
          <% end %>
          <%= f.submit t('devise.sessions.new.sign_in'), class: 'btn btn-primary normal-button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
