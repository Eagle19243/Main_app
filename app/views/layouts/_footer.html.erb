<footer class="footer-wrapper">
  <div class="footer-content">
    <section class="top-bar-section">

      <ul class="title-area">
        <li>
          <%= link_to projects_path do %>
            Active projects
          <% end %>
        </li>
        <% if user_signed_in? %>
            <li>
              <a href="#" id="footer-startbtn"><strong>Start a Project</strong></a>
            </li>
        <% else %>

            <li>
              <a href="#" id="create-project-footer" data-reveal-id="sign-in-sing-up"> <strong>Start a Project</strong>
              </a>

            </li>

            <li>
              <a href="#" id="sign-in-footer" data-reveal-id="sign-in-sing-up" class="signup_buttons">
                Sign In
              </a>
            </li>
            <li>
              <a href="#" id="sign-up-footer" data-reveal-id="sign-in-sing-up" class="signup_buttons">
                Sign Up
              </a>
            </li>
        <% end %>
      </ul>
    </section>

    <section class="top-bar-section">
      <ul class="left">
        <li class="active">
          <%= link_to "<h4 style='color:white'>What is WeServe?</h4>".html_safe, projects_path, data: {no_turbolink: true} %>
        </li>
        <li class="active">
          <%= link_to 'Who we are', users_path, data: {no_turbolink: true} %>
        </li>
        <li class="active">
          <%= link_to 'Terms of Use', pages_terms_of_use_path, data: { no_turbolink: true } %>
        </li>

        <li class="active">
          <%= link_to 'Privacy Policy', pages_privacy_policy_path, data: { no_turbolink: true } %>
        </li>

        <li class="active">
          <%= link_to 'Contact', users_path, data: {no_turbolink: true} %>
        </li>

      </ul>
      <hr class="my_hr">
    </section>

    <section class="top-bar-section">
      <ul class="left">
        <li class="active" style="margin-left: 20px">
          <h1 style="font-weight:bold; color: white;">WeServe</h1>
        </li>
        <li class="active">
          <h1 style="font-weight:bold; color: white;">2016</h1>
        </li>
      </ul>
    </section>
  </div>
</footer>
