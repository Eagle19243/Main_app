<%# Rails flash messages styled for Zurb Foundation %>
<div class="flash-messages">
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <div data-alert class="alert-box <%= name.to_s == 'notice' ? 'success' : 'alert' %>">
        <%= msg.html_safe %>
        <a href="#" class="close">&times;</a>
      </div>
    <% end %>
  <% end %>
</div>
