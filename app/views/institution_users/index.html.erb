<p id="notice"><%= notice %></p>

<h1>Listing Institution Users</h1>

<table>
  <thead>
    <tr>
      <th>Institution</th>
      <th>User</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @institution_users.each do |institution_user| %>
      <tr>
        <td><%= institution_user.institution %></td>
        <td><%= institution_user.user %></td>
        <td><%= institution_user.position %></td>
        <td><%= link_to 'Show', institution_user %></td>
        <td><%= link_to 'Edit', edit_institution_user_path(institution_user) %></td>
        <td><%= link_to 'Destroy', institution_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

