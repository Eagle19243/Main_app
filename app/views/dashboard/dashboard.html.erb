<link href='http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css' rel='stylesheet' type='text/css'>
<link href="/static/users/css/font-awesome.css" rel="stylesheet">
<link href="/static/users/css/style.css" rel="stylesheet">
<link rel="stylesheet" href="/static/ManishNotifications/css/style.css">
<link rel="stylesheet" type="text/css" href="/static/ManishNotifications/css/font-awesome/css/font-awesome.min.css">
<link href='https://fonts.googleapis.com/css?family=Roboto+Condensed:400,300,700' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>

<%= render 'layouts/menu', user: @user %>

<% content_for :title do %>
  WeServe > User Profile
<% end %>

<div class="row expanded collapse" data-equalizer data-equalizer-mq="large-up">
  <%= render 'users/sidebar' %>
  <div class="small-12 medium-10 columns" data-equalizer-watch>
    <div class="tabs-content" id="tabcontentdiv">
      
      <section role="tabpanel" aria-hidden="false" class="content active" id="profile">
        <%= render "users/tabcontent/profile" %>
      </section>
      
      <section role="tabpanel" aria-hidden="true" class="content" id="projects">
        <h3>Projects</h3>
        <div class="row">
         <%= render 'users/comments' %>
         <%= render 'users/projects' %>
        </div>
      </section>

      <section role="tabpanel" aria-hidden="true" class="content" id="notifications">
        <%= render 'users/tabcontent/notifications' %>
      </section>
      
      <section role="tabpanel" aria-hidden="true" class="content" id="messages">
        <h2>Comming soon.</h2>
      </section>

      <section role="tabpanel" aria-hidden="true" class="content" id="favorite">
        <%= render "users/tabcontent/favorite_projets" %>
      </section>
    </div>
  </div>
</div>