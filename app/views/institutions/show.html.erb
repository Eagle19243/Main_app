<%= render 'layouts/menu' %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @institution.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @institution.description %>
</p>

<p>
  <strong>Country:</strong>
  <%= @institution.country %>
</p>

<p>
  <strong>City:</strong>
  <%= @institution.city %>
</p>

<p>
  <strong>Logo:</strong>
  <%= @institution.logo %>
</p>

<p>
  <strong>Website:</strong>
  <%= link_to "#{@institution.url}", url_for("http://#{@institution.url}") %>
</p>

<br>

<h2>Members of <%= @institution.name %></h2>
<br>
<% @institution.users.all.to_a.each do |user| %>
  <h3><%= link_to "#{user.name}", user_path(user) %></h3>
  <br>
<% end %>

<%= link_to 'Edit', edit_institution_path(@institution) %> |
<%= link_to 'Back', institutions_path %>
