<%= simple_form_for(@team) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :number_of_members %>
    <%= f.input :number_of_projects %>
    <%= f.input :mission %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
