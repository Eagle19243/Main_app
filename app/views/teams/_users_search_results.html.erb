<h4>Found <%= users.count %> users</h4>
<div class="foundUsers">
  <div class="small-8 columns">
    <% users.each do |user| %>
      <div class="small-8 columns">
        <%= link_to user.name, user_path(user) %>
      </div>
      <div class="small-4 columns">
        <%= render partial: "admin_invitations/invite_form", locals: { user: user, project: project } %>
      </div>
    <% end %>
  </div>
</div>

<script>
  $(function(){
    debugger;
    $('form.new_admin_invitation').submit(function(e) {
      debugger;
      e.preventDefault();
      debugger;
      $.ajax({
        type: $(this).attr('method'),
        url: $(this).attr('action'),
        data: $(this).serialize()
      }).done(function(data) {
        alert("done");
        // Optionally alert the user of success here...
      }).fail(function(data) {
        alert("fail");
        // Optionally alert the user of an error here...
      });
    });
  });
</script>