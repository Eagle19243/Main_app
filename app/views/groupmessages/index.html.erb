<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>We Serve</title>
  <link rel="stylesheet" href="/static/MESSAGES-PAGE/css/foundation.css">
  <link rel="stylesheet" type="text/css" href="/static/MESSAGES-PAGE/css/font-awesome/css/font-awesome.min.css">
  <link href='https://fonts.googleapis.com/css?family=Slabo+27px|Acme|Oswald:300' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="/static/MESSAGES-PAGE/css/custom.css">
  <link rel="stylesheet" href="/static/MESSAGES-PAGE/css/media-queries.css">
  <script src="/static/MESSAGES-PAGE/js/vendor/modernizr.js"></script>
  <link rel="stylesheet" href="/static/MESSAGES-PAGE/css/messages.css">
</head>
<body>
<div class="main">
  <div class="row messages-page-row">
    <!-- Main nav -->
    <div class="small-2 columns full-page" id="left-nav">
      <nav>
        <ul class="side-nav">
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a href="/profile_comments">Profile</a></li>
          <li><a href="/projects">Projects</a></li>
          <li class="active"><a href="/notifications">Notifications</a></li>
          <li><a href="/groupmessages">Messages</a></li>
          <li><a href="#">Logout</a></li>
        </ul>
      </nav>
    </div>
    <!-- Messages and projects nav -->
    <div class="small-2 columns full-page" id="messages-nav">
      <br>
      <div class="messages-nav-title">
        <i class="fa fa-file-text-o fa-2x" aria-hidden="true"></i>
        <span>Messages</span>
      </div>
      <div class="messages-menu" style="overflow-y: scroll; max-height: 85%;">
        <div class="messages-submenu">
          <div class="submenu-title">
            <% current_user_projects = current_user.projects rescue nil%>
            <span class="menu-subtitle">PROJECTS (<%= current_user_projects.count rescue 0 %>)</span>
            <i class="fa fa-plus-circle" aria-hidden="true"></i>
          </div>
          <ul class="circle">
            <%unless current_user.projects.blank? %>
              <% current_user_projects.each do |project|%>
                  <li><a href="#"><%= project.try(:title) %></a></li>
             <%end %>
            <%end%>

          </ul>
        </div>
        <hr>
        <div class="messages-submenu" id="chatrooms_id">
          <div class="submenu-title">
            <span class="menu-subtitle">DIRECT MESSAGES</span>
            <i class="fa fa-plus-circle" aria-hidden="true"></i>
          </div>
          <ul class="circle">
            <!--<li><a href="#">Eric</a></li>-->
            <!--<li class="active"><a href="#">Caju</a></li>-->
            <!--<li><a href="#">Tendai</a></li>-->
            <% unless (current_user_projects.blank?) %>
                 <%current_user_projects.each do |project| %>
                    <%project.chatrooms.each do |chat_room|%>
                        <div style="background-color: lightseagreen; color:white;padding: 10px;text-align: center">Project: <a href="#" style="color:white"><%= project.try(:title) %></a></div>
                        <% project_team = get_project_team(chat_room.id) %>
                        <li><a href="#" id="chatroom_id:<%= chat_room.id %>, project_id:<%= project.id %>"><%= get_chatroom_title(chat_room.id) %></a></li>
                        <%unless project_team.blank?%>
                          <%project_team.each do |member|%>
                              <li><a href="#" id="<%= member.id %>,<%= current_user.id %>"><%= member.try(:name) %></a></li>
                        <%end%>
                        <%end%>
                    <%end%>
                    <%end%>
               <%else%>
                <!--TeamMembership.where(task_id: @task.id)-->
                <li><a href="#"><%=  'No Group Found' %></a></li>
            <%end%>
          </ul>
        </div>
        <hr>
      </div>
    </div>

    <div class="small-7 columns" id="page-message-content">
      <br>
      <%= @groupmessages.count %>
      <%= render partial: 'groupmessages/chatroom_info' %>
      <hr>
      <div id="messages">
      <%= sync partial: 'message_now', collection: @groupmessages.compact.uniq %>

      <%= sync_new partial: 'message_now', resource:Groupmessage.new %>
        <div>
        <hr>
    </div>

</div>


      <%= simple_form_for(@groupmessage, :html => {:class => 'new-message-form'}) do |f| %>
          <%= f.error_notification %>
          <%hidden_field_tag 'project_id', current_user.projects.last.id unless current_user.projects.blank? %>
          <%hidden_field_tag 'chatroom_id', current_user.projects.last.chatrooms.first.id unless current_user.projects.blank? %>

          <div class="small-11 columns">
            <%= f.input :messgae%>
          </div>

          <div class="small-1 columns">
            <span class="postfix" style="margin-top:32%">
              <i class="fa fa-paperclip fa-2x" title="Attach file" aria-hidden="true"></i>
            </span>
          </div>
    <span class="send-hint">
            Hit "Enter" to send
     </span>
      <% end %>
<script src="/static/MESSAGES-PAGE/js/vendor/jquery.js"></script>
<script src="/static/MESSAGES-PAGE/js/foundation.min.js"></script>
<script>
  $(document).foundation();
</script>
<script type="text/javascript">
  $(document).ready(function(){
    $("#chatrooms_id a").click(function(event) {

      alert(event.target.id.split(',')[0]);

      event.preventDefault();
    });

    $('#groupmessage_messgae').keypress(function(e){
      if(e.which == 13 && !e.shiftKey){
        alert('Click Enter')
        $(this).closest('form').submit();
      }
    });

  });

</script>

</body>
</html>