
<!DOCTYPE html>
<html lang="en">
<meta charset="UTF-8">

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<script type="text/javascript">
  $(document).ready(function(){
    $("#gmail-invite-modal").modal('show');
  });
</script>

<div id="gmail-invite-modal" class="modal">
  <div class="modal-dialog">
    <div class="modal-content" style="font-size: 20px">
      <div class="modal-header">
        <button type="button" class="close" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">Invite 3 Friends To Upgrade Your Account</h4>
      </div>
      <script>
        var arr=[]
      </script>
      <% if !@contacts.nil?%>
          <% @contacts.each do |c|%>
              <% @contacts.count %>
              <% x = c[:email] %><br>
              <script>arr.push("<%=x%>")</script>
              <input type="checkbox" id="x" class='y' value="<%=x%>"  checked>
              <%=x%>
          <%end%>
      <%end%>

      <script>
        $(document).ready(function() {
          document.getElementById("emails").value = arr;
          $('.y').change(function () {
            if ($(this).prop('checked') == true) {
              var ema = $(this).attr('value');
              arr.push(ema)
              document.getElementById("emails").value = arr;
            }
            else
            {
              var email = $(this).attr('value');
              var index = arr.indexOf(email)
              arr.splice(index, 1)
              document.getElementById("emails").value = arr;
            }
          });
        });
      </script>
      <%= form_tag  '/projects/send_project_email' do%>
          <%= hidden_field_tag 'emails' %>
          <%= submit_tag "Send Email", class: "btn-primary btn-block ripple-effect" %>
      <%end %>
    </div>
  </div>
</div>