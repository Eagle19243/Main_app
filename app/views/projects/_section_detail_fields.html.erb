<div class ="nested-fields">
  <div class="form-group ">
    <div class="control-group" style="display: inline-block;">
      <%= f.label :order %>
      <%= f.text_field :order, class: 'form-control', style:'width:50px;'%>
    </div>
    <div class="control-group" style="display: inline-block;">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', style:'width:400px;'%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :context%>
    <%= f.text_area :discussed_context, :class=>'tinymce section-detail-context', :rows => 10, :cols => 60 %>
  </div>
  <%= link_to_remove_association("Remove section", f, class:'button tiny') %>
</div>