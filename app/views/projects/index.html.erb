<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>
<div class="project-page-info">
  <h3>Active projects</h3>
  <p>See what other people are doing with YouServe, and get involved.</p>
  <%= link_to 'Make a new project', new_project_path, class: "hero-button" %>
</div>
<div class="separator"></div>

<div class="content projects">
  <% @projects.each do |project| %>
  <div class="project-wrapper">
    <div class="project-showcase">
      <div class="picture-wrapper">
          <% if project.picture? %>
            <a href="<%= project_path(project)%>" style="background: url(<%= project.picture.url %>) no-repeat center center;"></a>
          <% else %>
            <a href="<%= project_path(project)%>" style="background: url(http://gravatar.com/avatar/ebfb11254db979c223dd184ecf446c99?size=440) no-repeat center center;"></a>
          <% end %>
      </div>

      <div class="project-info">

        <h4 class="project-title"><%=link_to project.title, project_path(project) %><span class="project-country"><%= project.country %></span></h4>
        <div class="tasks hide-mobile">
          <% project.tasks.take(2).each do |task| %>
          <div class="task">
            <p class="task-description"><%= task.description %></p>
            <div class="progress-bar">
              <div class="current-progress" style="width: <%= 100 * (task.current_fund/task.budget) %>%"></div>
            </div>
            <span class="left">
              <strong>$<%= task.current_fund.to_i %></strong> funded
            </span>
            <span class="right">
              <strong><%= (100 * (task.current_fund/task.budget)).to_i %></strong>% of goal
            </span>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%end%>

</div>
