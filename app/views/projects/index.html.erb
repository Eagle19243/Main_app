<!-- Tab section -->
<div class="tabs tabwrap">
  <div class="row" style="max-width: none;">
    <div class="small-12 columns">
      <div class="tabs-content task-tabs-content">
        <!--Task tab -->
        <div role="tabpanel">
          <div class="row">
          <!--Funding / Sourcing Column -->
          <div class="medium-5 small-12 small-offset-1 columns" style="padding-bottom:20px;">
            <h1 class="heading1">Browse All Projects</h1>
            <%= paginate @featured_projects %>
          </div>
          <!--Funding / Sourcing Column -->
          <div class="medium-4 small-12 columns end" style="padding-bottom:20px;">
            <%= form_tag projects_user_search_path , :method => :post , :id => 'search-form',:class => "left top-searchbox project-search" do  %>
                    <%= autocomplete_field_tag :title ,nil,autocomplete_user_search_projects_path , :placeholder =>"Search Causes, Places, or Keyword"%>
                    <button type="button" name="" type="submit" >
                      <i class="fa fa-search"></i>
                    </button>
            <% end %>
          </div>
          <div class="row taskbox-wrap">
            <!--Funding / Sourcing Column -->
            <div class="small-11 small-offset-1 columns">
              <!-- repeating member task box -->
              <% @featured_projects.each do |project| %>
                  <span class="task-box small-11 medium-5 large-3 columns" style="float: left;">
                    <div class="img-res">
                      <%= link_to taskstab_project_path(project) ,data: { no_turbolink: false } do%>
                        <%= image_tag(project.picture) %>
                      <% end %>
                    </div>
                    <p>
                      <%= link_to project.title, taskstab_project_path(project) ,data: { no_turbolink: false }%>
                    </p>
                    <ul class="task-box-icons">
                      <li>
                        <i class="fa fa-map-marker" aria-hidden="true"></i>
                        <%= project.country %>
                      </li>
                      <li>
                        <i class="fa fa-paperclip" aria-hidden="true"></i>
                        <%= link_to project.user.name, user_path(project.user)%>
                      </li>
                    </ul>
                    <p class="clr1">
                      <%= project.short_description%>
                    </p>
                    <div class="nice round progress alert large-12 medium-12 small-12">
                      <span class="meter" style="width: <%= project.funded_percentages%>"></span>
                    </div>
                    <div class="row task-4rd-row">
                      <center>
                        <table>
                          <tr>
                            <th><%= project.funded_percentages %></th>
                            <th><%= project.tasks_relations_string%></th>
                            <th><%= project.team_relations_string%></th>
                            <th>$<%= project.funded_budget %></th>
                          </tr>
                          <tr>
                            <td>Funded</td>
                            <td>Tasks</td>
                            <td>Teamates</td>
                            <td>Raised</td>
                          </tr>
                        </table>
                      </center>
                    </div>
                  </span>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
<%= render 'visitors/sitewide_footer' %>
