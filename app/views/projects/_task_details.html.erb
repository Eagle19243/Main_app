<div id="myModal" class="modal-task modal-default" tabindex="-1">
  <!-- Modal content -->
  <div class="modal-content modal-task__content">
    <button id="task-popup-close" type="button" class="modal-default__close"></button>
    <div class="task-details">
        <div id="task-related-messages"></div>
        <div class="modal-task__title-wrap">
          <% if user_signed_in? && can?(:update, @task) %>
            <h2 class="modal-default__title js-toggleForm" id="task-title"><%= @task.title %></h2>
            <%= form_for @task, :remote => true, html: {id: "task-update-title-form", class: "modal-task__form _hide"} do |f| %>
              <%= f.text_field :title, id: "input-task-title" %>
              <button name="button" class="btn-root task-details__save-btn" type="submit" id="task-update-title">save</button>
              <button class="btn-root task-details__close-btn">cancel</button>
            <% end %>
          <% else %>
            <h2 class="modal-default__title" id="task-title"><%= @task.title %></h2>
          <% end %>
        </div>

        <div class="modal-task__flex">
          <div class="modal-task__content-side">

            <% if user_signed_in? && can?(:update, @task) %>

                <div class="task-desc">
                  <div class="modal-task__desc-block">
                    <h4>Task Description</h4>
                    <%if @task.doing? || @task.reviewing? || @task.completed? %>
                        <a href="#" id="openEditTaskWarning" class="btn-edit"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        <p class="modal-task__task-info js-toggleForm" id="task-description"><%= @task.description %></p>
                    <%else %>
                        <p class="modal-task__task-info js-toggleForm" id="task-description"><%= @task.description %></p>
                        <%= form_for @task, :remote => true, html: {id: "task-update-description-form", class: "modal-task__form _hide"} do |f| %>
                            <%= f.text_area :description, id: "input-task-description" %>
                            <button name="button" class="btn-root task-details__save-btn" type="submit" id="task-update-description">save</button>
                            <button class="btn-root task-details__close-btn" id="cancel-description">cancel</button>
                        <% end %>
                    <% end %>

                  </div>

                  <div class="modal-task__desc-block">
                    <h4>Specifications</h4>
                    <p class="modal-task__task-info js-toggleForm" id="task-condition"><%= @task.condition_of_execution %></p>
                    <%= form_for @task, :remote => true, html: {id: "task-update-condition-form", class: "modal-task__form _hide"} do |f| %>
                        <%= f.text_area :condition_of_execution, id: "input-task-condition" %>
                        <button name="button" class="btn-root task-details__save-btn" type="submit" id="task-update-condition">save</button>
                        <button class="btn-root task-details__close-btn" id="cancel-condition">cancel</button>
                    <% end %>
                  </div>

                  <div class="modal-task__desc-block">
                    <h4>Proof of Execution</h4>
                    <p class="modal-task__task-info js-toggleForm" id="task-proof"><%= @task.proof_of_execution %></p>
                    <%= form_for @task, :remote => true, html: {id: "task-update-proof-form", class: "modal-task__form _hide"} do |f| %>
                        <%= f.text_area :proof_of_execution, id: "input-task-proof" %>
                        <button name="button" class="btn-root task-details__save-btn" type="submit" id="task-update-proof">save</button>
                        <button class="btn-root task-details__close-btn" id="cancel-proof">cancel</button>
                    <% end %>
                    <hr>
                  </div>

                  <%= render ("projects/task_comment") %>

                  <% if can? :create_task_comment, @task %>
                    <div class="comments-block">
                      <% if user_signed_in? %>
                          <div class="post-person">
                            <% if current_user.picture? %>
                                <%= image_tag(current_user.picture, size: "30x30") %>
                            <% else %>
                                <%= gravatar_for_user(current_user) %>
                            <% end %>
                          </div>
                          <%= form_for [@task.project, @task, @task.task_comments.build], remote: true, html: {id: 'comment-form'} do |f| %>
                              <div class="post-comment">
                                <%= f.text_area :body %>
                                <%= f.hidden_field :task_id, value: @task.id %>
                                <%= f.file_field :attachment, id: 'task-comment-attachment', style: "display: none" %>
                                <%= f.hidden_field :user_id, value: current_user.id %>
                                <button type="submit" name="commit" value="Send"> Send</button>
                                &nbsp;&nbsp;
                                <a href="#" id="task-comment-attachment-icon"><i class="fa fa-paperclip" aria-hidden="true"></i></a>
                                <div id="attachment-div"></div>
                              </div>
                          <% end %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
            <% else %>
                <div class="task-desc">
                  <h4>Task Description</h4>
                  <p><%= @task.description %></p>
                  <h4>Specifications</h4>
                  <p><%= @task.condition_of_execution %></p>
                  <h4>Proof of Execution</h4>
                  <p><%= @task.proof_of_execution %></p>
                  <hr>
                  <%= render ("projects/task_comment") %>
                  <% if can? :create_task_comment, @task %>
                    <div class="comments-block">
                      <% if user_signed_in? %>
                          <%= form_for [@task.project, @task, @task.task_comments.build], remote: true, html: {id: 'comment-form'} do |f| %>
                              <div class="post-comment">
                                <%= f.text_area :body %>
                                <%= f.hidden_field :task_id, value: @task.id %>
                                <%= f.file_field :attachment, id: 'task-comment-attachment', style: "display: none" %>

                                <button type="submit" name="commit" value="Send"> Send</button>
                                &nbsp;&nbsp;
                                <a href="#" id="task-comment-attachment-icon"><i class="fa fa-paperclip" aria-hidden="true"></i></a>
                                <div id="attachment-div"></div>
                              </div>
                          <% end %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
            <% end %>
            <div class="activity" id="task-activity">
              <%= render "projects/task_activities" %>
            </div>
            </div>


              <div class="modal-task__controls-side">
                <div class="fund">
                  <% if user_signed_in? %>
                    <% if @task.suggested_task? %>
                        <button type="button" title="FUND" class="btn-root" data-modal="#suggested_task_model_for_fund">Fund</button>
                        <button type="button" title="FUND" class="btn-root _dark" data-modal="#suggested_task_model_for_fund">DO</button>
                    <% elsif @task.accepted? %>
                        <button type="button" title="FUND" class="btn-root" onclick="fundPopup(<%= @task.id %>)" id="<%= @task.id %>" data-modal="#taskFundModal">Fund</button>
                        <button type="button" title="DO" class="btn-root _dark _do-model-popup" id="<%= @task.id %>" onclick="doPopup(<%= @task.id %>)" data-modal="#taskDoModal">DO</button>
                    <% end %>
                  <% end %>

                  <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width: <%= @task.funded %>">
                    </div>
                  </div>

                  <div class="modal-task__card">
                    <div class="modal-task__card-values">
                        <div class="modal-task__card-value _data">
                            <%= @task.funded %>
                        </div>
                        <div class="modal-task__card-value _data">
                            <%= @task.number_of_participants %>/<%= @task.target_number_of_participants %>
                        </div>
                        <div class="modal-task__card-value _data">
                            <%= satoshi_balance_in_btc(@task.current_fund) %>
                        </div>
                        <div id="task-budget" class="modal-task__card-value _data _budget-id">
                            <%= best_in_place_if user_signed_in? &&  current_user.id == @task.project.user_id, @task, :budget, :activator => '#task-budget' %>
                            <span class="btn-edit glyphicon glyphicon-pencil" aria-hidden="true" id="budget-pencil"></span>
                        </div>
                    </div>
                    <div class="modal-task__card-titles">
                        <div class="modal-task__card-value">Funded</div>
                        <div class="modal-task__card-value">Teammates</div>
                        <div class="modal-task__card-value">Raised</div>
                        <div class="modal-task__card-value">Budget</div>
                    </div>
                    <div class="modal-task__card-estimation">
                      <div class="modal-task__card-estimation-amount">Per member amount: <%= satoshi_balance_in_btc(@task.planned_amount_per_member) %> BTC</div>
                    </div>
                  </div>

                  <div class="team-block mb30">
                    <h5>Team</h5>
                    <% if @task.team_memberships.blank? %>
                        <h2>No Teammate Added Yet</h2>
                    <% else %>
                        <% @task.team_memberships.each do |membership| %>
                            <a class="team-block__item" href="/users/<%= membership.team_member.id %>">
                                <% if membership.team_member.picture? %>
                                    <%= image_tag(membership.team_member.picture) %>
                                <% else %>
                                    <%= gravatar_for_user(membership.team_member) %>
                                <% end %>
                                <div class="team-block__item-name"><%= membership.team_member.name %></div>
                            </a>
                        <% end %>
                    <% end %>
                  </div>

                  <div class="deadline-block">
                      <h5>Deadline</h5>

                      <% if can?(:update, @task) && !@task.any_fundings? %>
                          <div class="deadline-group">
                              <div class="form-group">
                                  <%= form_for @task, :remote => true, html: {id: "task-update-deadline-form"} do |f| %>
                                      <div class='input-group date deadline_picker'>
                                          <span class="input-group-addon">
                                              <span class="glyphicon glyphicon-calendar"></span>
                                          </span>

                                          <input type='text' name="task[deadline]" class="form-control" id="deadline_field" required="required" aria-required="true" placeholder='<%= @task.deadline.strftime("%Y-%m-%d %I:%M %p") %>' />
                                      </div>
                                      <button class="btn-root" name="button" type="submit" id="task-update-deadline">update</button>
                                  <% end %>
                              </div>
                          </div>
                      <% else %>
                        <p><%= @task.deadline %></p>
                      <% end %>
                  </div>

                    <script type="text/javascript">
                        DateTimePickerModule.init($(document));
                    </script>
            </div>

            <hr>

                <div class="approve-block mb20">
                  <% if user_signed_in? && (current_user.id == @task.project.user_id && @task.suggested_task?) %>
                      <a href="javascript:void(0)" class="approve-link mb10" id="approveTaskPopover" tabindex="0" data-trigger="focus" data-placement="top">
                        <i class="fa fa-arrow-right" aria-hidden="true"></i>&nbsp;&nbsp;
                        Approve
                      </a>
                  <% end %>
                  <% if user_signed_in? %>
                    <% if @task.accepted? && (current_user.is_project_leader?(@task.project) || current_user.is_coordinator_for?(@task.project)) %>
                      <%= link_to doing_task_path(@task.id), class: "approve-link" do %>
                          <i class="fa fa-arrow-right" aria-hidden="true"></i>&nbsp;&nbsp;
                          Start
                      <% end %>
                    <% end %>
                  <% end %>
                </div>

                <div class="button-group">
                  <div class="btn-left">
                    <% if user_signed_in? && (can? :create_or_destory_task_attachment, @task) %>
                        <%= form_for @task_attachment, :url => url_for(:controller => 'task_attachments', :action => 'create'), :remote => true, html: {multipart: true} do |f| %>
                            <%= f.hidden_field :task_id, :value => @task.id %>
                            <!--<input type="file" name="task_attachment[attachment]" id="file1" style="display: none;">-->
                            <input type="file" name="task_attachment[attachment]" id="file1"/>
                            <button type="button" class="attachment">
                              <i class="fa fa-paperclip" aria-hidden="true"></i>Add attachment
                            </button>
                            <%= f.submit "upload", class: "btn btn-primary", id: "upload-button" %>
                        <% end %>
                    <% end %>

                    <% if user_signed_in? %>
                        <% if current_user.can_submit_task?(@task) %>
                            <%= link_to reviewing_task_path(@task.id) do %>
                                <button>
                                  <i class="fa fa-check" aria-hidden="true"></i>Submit for Review
                                </button>
                            <% end %>
                        <% end %>
                        <% if current_user.can_complete_task?(@task) %>
                            <%= link_to completed_task_path(@task.id), data: {confirm: 'do you confirm that you have reviewed the task and that it is completed?'} do %>
                                <button>
                                  <i class="fa fa-check" aria-hidden="true"></i>Mark As Completed
                                </button>
                            <% end %>
                        <% end %>
                    <% end %>

                    <button id="sharebtn"><i class="fa fa-share" aria-hidden="true"></i>Share/Invite</button>
                    <!-- <button id="teambtn"><i class="fa fa-user" aria-hidden="true"></i>Teams</button> -->

                    <% if user_signed_in? && (can? :destroy, @task) %>
                        <%= link_to @task, method: :delete, data: {confirm: 'Are you sure?'} do %>
                            <button class= 'delete-task' type="button" title="Delete" data-delete-url='<%= reject_task_path(@task.id) %>' data-modal="#removeTask">
                              <i class="fa fa-trash-o" aria-hidden="true"></i>
                              Delete Task
                            </button>
                        <% end %>
                      <% end %>

                    <!-- Disable refund feature for now -->
                    <% if false && user_signed_in?  && @task.current_fund > 0 && current_user.id == @task.project.user_id  %>
                        <%= link_to refund_task_path(@task) do %>
                            <button>
                              <i class="fa fa-bitcoin" aria-hidden="true"></i>
                              Refund Task
                            </button>
                        <% end %>
                    <% end %>
                  </div>
                </div>

                <div class="attachments" id="task-attachments-div">
                  <h5>Attachments</h5>
                  <% @task_attachments.each do |attachment| %>
                      <div class="attachment">
                        <!--<iframe src="<%#= attachment.attachment_url %>" width="90" height="90" scrolling="no">-->
                        <!--</iframe>-->
                        <!--<img src="http://placehold.it/150x150">-->
                        <% if %w{jpg png jpg gif bmp}.include?(attachment.attachment.file.extension) %>
                          <%= image_tag attachment.attachment.url, style: "width:90px ; height:90px" %>
                        <% else %>
                          <img src="http://placehold.it/150x150">
                        <% end %>
                        <h4><%= attachment.attachment.file.filename %></h4>
                        <span>Added <%= attachment.created_at.strftime("%b  %d,%Y %r") %></span><br>
                        <div class="attachment-actions">
                          <%= link_to "Open", attachment.attachment_url, target: '_blank' %>
                          <% if user_signed_in? && (can? :create_or_destory_task_attachment, @task) %>
                              <a href="#" name="delete_attachment" id="<%= attachment.id %>">Remove</a>
                          <% end %>
                        </div>
                      </div>
                      <hr>
                  <% end %>
                </div>
              </div>
            </div> <!--row ends -->
        </div>

    </div>
    </div>
  </div>

    <!-- Task Details Window -->

