      <!-- Modal content -->
      <div class="modal-content2 yes">
        <b> <span id="teamclose" class="close">×</span></b>
        <div class="fund-do">
          <div class="row">
            <center><h4 id="task-members-container" task-id="<%= @task.id %>">Team</h4>
