<% if user_favorite_project?(current_user, @project)%>
  <%= button_to 'Remove from favorites', {
    controller: :favorite_projects, action: :destroy,
      favorite_project:  {
        project_id: @project.id, user_id: current_user.id
      }
    },
    {method: :delete, class: 'button add_to_favorites'}
  %>
<% else %>
  <%= button_to 'Add to favorites', {
    controller: :favorite_projects, action: :create,
      favorite_project: {
        project_id: @project.id, user_id: current_user.id
      }
    },
    {class: 'button add_to_favorites'}
  %>
<% end %>
